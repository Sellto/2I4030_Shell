\newcommand*{\fig}{\@ifstar\fignocenter\figcenter}
\newcommandx{\fignocenter}[3]{
	\begin{figure}[H]	
	\includegraphics[scale=#2]{#1}
	\@ifmtarg{#3}{}{\caption{#3}}
	\label{#1}	
	\end{figure}
}
	
\newcommand{\figcenter}[3]{
	\begin{figure}[H]	
	\centering
	\includegraphics[scale=#2]{#1}
	\@ifmtarg{#3}{}{\caption{#3}}
	\label{#1}	
	\end{figure}
}	

